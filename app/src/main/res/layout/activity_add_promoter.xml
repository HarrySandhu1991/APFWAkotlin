<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPromoterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreen">


        <RelativeLayout
            android:id="@+id/rl_categories"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorGreen">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/colorTopText"
                android:fontFamily="@font/roboto_regular"
                android:textSize="25sp"
                android:text="Add Promoter"/>


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_categories"
            android:background="@drawable/corner_radius_view"
            android:padding="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/spinner_roleList"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_promoterName"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Enter Promoter Name"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:theme="@style/MyEditTextTheme"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_promoterEmail"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Enter Promoter Email"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:theme="@style/MyEditTextTheme"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_promoterAddress"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Enter Address"
                        android:drawablePadding="10dp"
                        android:lines="2"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:theme="@style/MyEditTextTheme"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_promoterMobileNo"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Enter Mobile No"
                        android:drawablePadding="10dp"
                        android:lines="2"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:theme="@style/MyEditTextTheme"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_promoterWhatsappNo"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Enter Whatsapp No"
                        android:drawablePadding="10dp"
                        android:lines="2"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:theme="@style/MyEditTextTheme"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_promoterAdharNo"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Enter Adhaar Card No"
                        android:drawablePadding="10dp"
                        android:lines="2"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:theme="@style/MyEditTextTheme"
                        />
                </com.google.android.material.textfield.TextInputLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/et_searchAdharNumber"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:ems="10"
                        android:hint="Enter Adhaar Card No"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/edit_text_border"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_search"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_addPromoter"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_margin="4dp"
                        android:text="Add Promoter"
                        android:background="@drawable/rounded_button_green"/>


                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_promoterCancel"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Cancel"
                        android:textColor="@color/colorText"
                        android:backgroundTint="@color/colorTopText"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>