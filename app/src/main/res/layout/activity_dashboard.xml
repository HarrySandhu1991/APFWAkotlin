<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_top_image"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/ll_top_icons"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_prmoter_info"
                        android:layout_marginEnd="10dp">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:id="@+id/iv_promoter"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_promoters_info"
                            android:src="@mipmap/ic_promoters_info"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textSize="13sp"
                            android:layout_alignStart="@id/iv_promoter"
                            android:layout_alignEnd="@id/iv_promoter"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:id="@+id/tv_promoters_info"
                            android:layout_alignParentBottom="true"
                            android:text="Promoters\nInformation"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:id="@+id/rl_farmersInfromation">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:id="@+id/iv_farmer"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_farmers_info"
                            android:src="@mipmap/ic_farmers_info"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/tv_farmers_info"
                            android:textSize="13sp"
                            android:layout_alignStart="@id/iv_farmer"
                            android:layout_alignEnd="@id/iv_farmer"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:layout_alignParentBottom="true"
                            android:text="Farmers\nInformation"/>

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/ll_top_icons"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_nursery_info"
                            android:src="@mipmap/ic_promoters_info"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:id="@+id/tv_nursery_info"
                            android:layout_alignParentBottom="true"
                            android:text="Nursery Information"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:id="@+id/rl_promoterLogin">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_promoters_login"
                            android:src="@mipmap/ic_promoters_info"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/tv_promoters_login"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:layout_alignParentBottom="true"
                            android:text="My\nTeam"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/tv_contact_us"
                            android:src="@mipmap/ic_promoters_info"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/tv_contact_us"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:layout_alignParentBottom="true"
                            android:text="Contact\nUs"/>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>